extends ../layout/index

block  contenido
    div.py-10
        h1.text-4xl.font-extrabold.text-center Bienes  
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-700.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvide-password" noValidate)
                    input(type="hidden", name="_csrf" value= csrfToken)
                    div                 
                        label.block.text-sm.uppercase.text-gray.text-gray-500.mb-2.font-bold.mt-2(for="email") Tu Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email")

                    div.flex.item-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes cuenta? Registrate 
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión 
                    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold-300 py-3 cursor-pointer" type="submit" value="Enviar Instrucciones")